{
  "name": "service-template",
  "version": "1.0.0",
  "main": "src",
  "repository": "https://github.com/mondash/service-template.git",
  "author": "Matthew Ondash <ondashm@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config config/webpack.config.ts",
    "check:lint": "eslint --config config/.eslintrc.json --ignore-path config/.eslintignore .",
    "check:style": "prettier --config config/.prettierrc.json --ignore-path config/.prettierignore --check .",
    "check:types": "tsc --project config/tsconfig.eslint.json",
    "codegen": "graphql-codegen --config config/codegen.yml",
    "dev": "ts-node -r tsconfig-paths/register --files .",
    "fix:style": "prettier --config config/.prettierrc.json --ignore-path config/.prettierignore --write .",
    "start": "nodemon --config config/nodemon.json",
    "test": "jest --config config/jest.config.ts",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "apollo-server-core": "^2.21.2",
    "apollo-server-express": "^2.21.2",
    "express": "^4.17.3",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/introspection": "^1.18.1",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "apollo": "^2.32.5",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  }
}
