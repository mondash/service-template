{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "types/*": ["types/*", "types/__generated__/*"],
      "lib/*": ["lib/*"],
      "*": ["*", "../node_modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.test.*"]
}
